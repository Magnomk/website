<!-- aqui começa as informações para cadastro, sendo assim o artigo da página -->

<article>

<head>
    <title>Printar Informações</title>
</head>
<body>
<b>Seu Nome:</b> <input type="text" id="nome">

<p></p>  

<b>Data de nascimento</b> 
<input type="date" id="dataNascimento">

<p></p>
<p></p>
    
<b>Série</b> <input type="text" id="serie">

<p></p>
<p></p>
    
<button onclick="printarInformacoes()">Salvar</button>
    
<!--JavaScript-->
    <script>
        function printarInformacoes() {
            // Obter os valores dos campos de entrada
            var nome = document.getElementById("nome").value;
            var dataNascimento = document.getElementById("dataNascimento").value;
            var serie = document.getElementById("serie").value;

            // Exibir as informações na tela
            alert("Seu Nome: " + nome + "\nData de Nascimento: " + dataNascimento + "\nSérie: " + serie);
        }
    </script>
</body>
</html>


<!--Aqui finaliza o cadastro e a página de artigo-->
</article>
